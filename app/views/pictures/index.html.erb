<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content type</th>
    <th>Data</th>
  </tr>

<% for picture in @pictures %>
  <tr>
    <td><img src="<%= url_for :action => 'picture', :id => picture.id %>" /></td>
    <td><%= link_to 'Embiggen', picture %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_picture_path %>
