<div id="stupid_title_frame">
	<%= link_to "OMG IT&quot;S #{OMG_ITS}!!1!", root_url, :class => "big_stupid_title" %>
</div>
<div id="pic_frame">
	<img src="<%= url_for :action => 'picture', :id => @picture.id %>" />
</div>
<div id="sticky_container">
	<% if not @sticky.nil? %>
	  <%= render :partial => "sticky", :locals => {:id => @sticky} %>
	<% end %>
</div>

<div id="comment-form">
  <% form_remote_for @comment, :complete => "$('comment_body').value = ''" do |f| %>
    <%= f.error_messages %>
  
    <p>
      <%= f.label :comment %><br />
      <%= f.text_field :body, :maxlength => 140, :size => 50 %>
      <%= f.hidden_field :picture_id %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %> 
</div>